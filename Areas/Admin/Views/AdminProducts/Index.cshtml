@model DOANLTWT3BANDIENTHOAIDIDONG.Models.ViewModels.ProductSearchVM

@{
    ViewBag.Title = "Search Product";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<meta name="viewport" content="width=device-width" />
<style>
    .search-container, .order-container{
        padding-top:20px;
        display:flex;
        justify-content:center;
        align-items:center;
    }
</style>
<body>
    @using (Html.BeginForm("Index", "AdminProducts", FormMethod.Get))
    {
        @*<div class="form-group search-container">
                 @Html.TextBoxFor(m => m.SearchTerm, new
            {
                @class = "form-control",
