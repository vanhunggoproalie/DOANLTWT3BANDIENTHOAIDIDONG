@model DOANLTWT3BANDIENTHOAIDIDONG.Models.User

@{
    ViewBag.Title = "Xóa Tài Khoản Admin";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-danger text-white">
        <h2 class="m-0 font-weight-bold">Xác Nhận Xóa Tài Khoản Quản Trị</h2>
    </div>
    <div class="card-body">

        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Cảnh Báo Nguy Hiểm!</h4>
            <p>Bạn có chắc chắn muốn xóa tài khoản quản trị **@Html.DisplayFor(model => model.Username)**? Hành động này sẽ không thể hoàn tác.</p>
        </div>

        <hr />

        <h4>Thông tin tài khoản:</h4>
        <dl class="row">
            @* Trường Username *@
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Username)
            </dt>
            <dd class="col-sm-9">
                <span class="font-weight-bold text-danger">@Html.DisplayFor(model => model.Username)</span>
            </dd>

            @* Trường UserRole *@
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.UserRole)
            </dt>
            <dd class="col-sm-9">
              
                <span class="badge badge-success p-2">
                    <i class="fas fa-crown"></i> @Html.DisplayFor(model => model.UserRole)
                </span>
            </dd>

           
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(model => model.Username)

            <div class="form-actions no-color mt-4 pt-3 border-top">
                <input type="submit" value="Xác Nhận Xóa Vĩnh Viễn" class="btn btn-danger btn-lg" />
                @Html.ActionLink("Hủy bỏ và Trở về Danh Sách", "Index", null, new { @class = "btn btn-secondary ml-3" })
            </div>
        }
    </div>
</div>