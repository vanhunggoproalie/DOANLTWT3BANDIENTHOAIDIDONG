<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Admin Panel</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .sidebar {
            width: 250px;
            background: #1f2937;
            color: white;
            padding-top: 20px;
        }

            .sidebar a {
                color: white;
                padding: 12px 20px;
                display: block;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background: #374151;
                }

        .content {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
            background: #f3f4f6;
        }

        .navbar {
            background: #111827 !important;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="text-center">ADMIN</h4>
        <hr />

        <a href="@Url.Action("Index","AdminHome")">🏠 Dashboard</a>
        <a href="@Url.Action("Index","AdminUsers")">👤 User Manager</a>
        <a href="@Url.Action("Index","AdminCAtegories")">📂 Category</a>
        <a href="@Url.Action("Index","AdminProducts")">📦 Product</a>
        <a href="@Url.Action("Index","AdminOrders")">🧾 Orders</a>
        <a href="@Url.Action("Index","AdminCustomers")">📊 Customer</a>
        <a href="/Account/Logout">🚪 Logout</a>
    </div>

    <!-- Content -->
    <div class="content">

        <!-- Top Navbar -->
        <nav class="navbar navbar-dark px-3 mb-3">
            <span class="navbar-brand">Admin Dashboard</span>
            <span class="text-white">Welcome, @User.Identity.Name</span>
        </nav>

        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
