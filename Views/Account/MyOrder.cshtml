@model DOANLTWT3BANDIENTHOAIDIDONG.Models.ViewModels.MyOrderVM

@{
    ViewBag.Title = "Đơn hàng của tôi";
}
<style>
    /* ----- TAB HEADER ----- */
.tabs {
    display: flex;
    gap: 20px;
    margin-bottom: 20px;
}

.tabs a {
    padding: 10px 18px;
    text-decoration: none;
    font-size: 16px;
    font-weight: 600;
    border-radius: 6px;
    background: #222;
    color: #fff;
    transition: 0.3s ease;
    border: 1px solid #444;
}

.tabs a:hover {
    background: #e60000;
    border-color: #e60000;
}

/* Tab đang được chọn */
.tabs .active {
    background: #e60000 !important;
    color: #fff !important;
    border-color: #e60000 !important;
}

/* ----- ORDER TABLE ----- */

table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 15px;
    background: #111;
    color: #eee;
    border-radius: 8px;
    overflow: hidden;
}

table thead {
    background: #222;
}

table th {
    padding: 12px 10px;
    text-align: left;
    font-size: 15px;
    font-weight: 600;
    color: #ff4d4d;
    border-bottom: 1px solid #333;
}

table td {
    padding: 12px 10px;
    border-bottom: 1px solid #222;
}

/* Hover từng dòng */
table tbody tr:hover {
    background: #1b1b1b;
}


p {
    color: #ccc;
    font-size: 16px;
}


@@media (max-width: 768px) {
    table th, table td {
        font-size: 13px;
    }

    .tabs a {
        padding: 8px 12px;
        font-size: 14px;
    }
}

</style>
<h2>Đơn Hàng Của Tôi</h2>

<div class="tabs">
    <a href="@Url.Action("MyOrder", new { filter = "all" })"
       class="@(ViewBag.Filter == "all" ? "active" : "")">Tất cả</a>

    <a href="@Url.Action("MyOrder", new { filter = "shipping" })"
       class="@(ViewBag.Filter == "shipping" ? "active" : "")">Đang giao hàng</a>

    <a href="@Url.Action("MyOrder", new { filter = "completed" })"
       class="@(ViewBag.Filter == "completed" ? "active" : "")">Đã hoàn thành</a>
</div>

<hr />

@if (ViewBag.Filter == "all")
{
    @Html.Partial("_OrderList", Model.AllOrders)
}
else if (ViewBag.Filter == "shipping")
{
    @Html.Partial("_OrderList", Model.ShippingOrders)
}
else if (ViewBag.Filter == "completed")
{
    @Html.Partial("_OrderList", Model.CompletedOrders)
}
