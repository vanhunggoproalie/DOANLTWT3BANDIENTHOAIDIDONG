        }

        body {
            font-family: "Inter", system-ui, Arial, sans-serif;
            background: #f6f7fb;
            color: #222;
        }

        .container {
            display: flex;
            max-width: 1300px;
            margin: 20px auto;
            gap: 30px;
        }

        /* ----- Filter ----- */
        .filter-section {
            width: 260px;
            background: #fff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 16px rgba(0,0,0,.08);
        }

            .filter-section h3 {
                font-size: 18px;
                margin-bottom: 14px;
                color: #d40000;
            }

        .filter-group {
            margin-bottom: 20px;
        }

            .filter-group h4 {
                font-size: 15px;
                margin-bottom: 8px;
                color: #333;
            }

            .filter-group ul {
                list-style: none;
            }

            .filter-group li {
                margin-bottom: 6px;
                font-size: 14px;
            }

            .filter-group input {
                margin-right: 6px;
                accent-color: #d40000;
            }

        .btn-apply {
            width: 100%;
            padding: 10px;
            background: #d40000;
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            transition: background .2s;
        }

            .btn-apply:hover {
                background: #a80000;
            }

        /* ----- Product Section ----- */
        .product-section {
            flex: 1;
        }

            .product-section h2 {
                font-size: 22px;
                margin-bottom: 18px;
                color: #222;
            }

        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill,minmax(200px,1fr));
            gap: 20px;
        }

        .card {
            background: white;
            border-radius: 12px;
            padding: 12px;
            box-shadow: 0 6px 18px rgba(16,24,40,.06);
            display: flex;
            flex-direction: column;
            transition: transform .2s;
        }

            .card:hover {
                transform: translateY(-4px);
            }

        .thumb {
            height: 180px;
            border-radius: 8px;
            background: #f6f8fb;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

            .thumb img {
                width: 100%;
                height: auto;
                object-fit: contain;
            }

        .card h4 {
            font-size: 15px;
            margin: 8px 0;
            color: #333;
            min-height: 42px;
        }

        .price {
            font-weight: 700;
            color: #e53935;
        }

        .old {
            font-size: 12px;
            color: #8890a6;
            text-decoration: line-through;
            margin-left: 6px;
        }

        .btn-row {
            margin-top: auto;
            display: flex;
            gap: 8px;
        }

        .btn {
            flex: 1;
            padding: 8px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            font-size: 14px;
        }

            .btn.buy {
                background: #c91518;
