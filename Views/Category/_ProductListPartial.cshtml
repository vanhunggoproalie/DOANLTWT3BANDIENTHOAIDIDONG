@model IEnumerable<DOANLTWT3BANDIENTHOAIDIDONG.Models.Product>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-sm-6" style="margin-bottom: 20px;">
            <div class="product-card">

                <a href="@Url.Action("Details", "Product", new { id = item.ProductID })" class="product-link">

                    <div class="product-img-container">
                        <img src="~/Images/@item.ProductImage" alt="@item.ProductName" />
                    </div>

                    <div class="product-name">
                        @item.ProductName
                    </div>

                    <div class="product-price">
                        @String.Format("{0:N0} ₫", item.ProductPrice)
                    </div>

                </a>

                <div class="product-actions">
                    <a href="@Url.Action("BuyNow", "Cart", new { id = item.ProductID })" class="btn-buy">Mua ngay</a>

                    <button onclick="addToCart(@item.ProductID)" class="btn-add-cart">
                        Thêm giỏ
                    </button>
                </div>

            </div>
        </div>
    }
</div>
