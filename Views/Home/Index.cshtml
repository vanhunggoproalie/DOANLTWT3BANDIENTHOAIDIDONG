@model DOANLTWT3BANDIENTHOAIDIDONG.Models.ViewModels.HomeProductVM
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang chủ - Cửa hàng điện thoại</title>
    <link rel="stylesheet" href="home.css">

    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            background-color: #f6f6f6;
            margin: 0;
            padding: 0;
        }

        .main-content {
            width: 95%;
            margin: 20px auto;
        }

        /* ----- CATEGORY SECTION ----- */
        .category-section {
            background: #fff;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 30px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

            .category-section h2 {
                margin-bottom: 15px;
                font-size: 20px;
            }

        .category-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: space-around;
        }

        .category-item {
            text-align: center;
            width: 90px;
            transition: transform 0.2s ease;
        }

            .category-item img {
                width: 70px;
                height: 70px;
                object-fit: contain;
            }

            .category-item p {
                font-size: 14px;
                margin-top: 5px;
            }

            .category-item:hover {
                transform: translateY(-5px);
            }

        /* ----- PRODUCT SECTION ----- */
        .product-section {
            background: linear-gradient(90deg, #ff4e00, #ec9f05);
            border-radius: 10px;
            padding: 20px;
            color: #fff;
        }

            .product-section h2 {
                text-align: center;
                margin-bottom: 20px;
            }

        .product-list {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 15px;
        }

        .product-item {
            background: #fff;
            border-radius: 10px;
            color: #000;
            width: calc(20% - 10px);
            padding: 10px;
            text-align: center;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .product-item:hover {
                transform: translateY(-5px);
                box-shadow: 0 5px 10px rgba(0,0,0,0.2);
            }

            .product-item img {
                width: 100%;
                height: 180px;
                object-fit: contain;
            }

            .product-item .name {
                font-weight: bold;
                margin-top: 8px;
            }

            .product-item .price {
                color: #e4002b;
                font-size: 16px;
                font-weight: bold;
            }

            .product-item .discount {
                font-size: 13px;
                color: #555;
            }
        .deal-section {
            background: #fff;
            border-radius: 12px;
            padding: 25px;
            margin-top: 30px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

            .deal-section h2 {
                font-size: 20px;
                margin-bottom: 20px;
                color: #000;
            }

        .deal-list {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 10px; /* giảm khoảng cách để 5 item khớp 1 hàng */
        }

        .deal-item {
            background: #fafafa;
            border-radius: 10px;
            text-align: center;
            width: calc(18% - 5px); /* giảm 10% kích thước so với 20% ban đầu */
            padding: 12px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            box-sizing: border-box;
        }

            .deal-item:hover {
                transform: translateY(-5px);
                box-shadow: 0 5px 12px rgba(0,0,0,0.15);
            }

            .deal-item img {
                width: 100%;
                height: 140px; 
                object-fit: contain;
                margin-bottom: 8px;
            }

            .deal-item .old-price {
                text-decoration: line-through;
                color: #777;
                font-size: 13px;
                margin: 0;
            }

            .deal-item .price {
                color: #e4002b;
                font-weight: bold;
                font-size: 15px;
                margin: 5px 0;
            }

            .deal-item .discount {
                color: #00a651;
                font-size: 13px;
            }

            .deal-item .name {
                margin-top: 8px;
                font-size: 13.5px;
                color: #000;
                font-weight: 500;
            }
        .action-link {
            text-decoration: none;
            color: inherit;
            display: inline-block;
        }
    </style>
</head>
