
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lịch Sử Đơn Hàng</title>
    <link rel="stylesheet" href="order.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', sans-serif;
        }

        body {
            background: #f5f6fa;
            color: #222;
        }

        .container {
            display: flex;
            max-width: 1600px;
            margin: 30px auto;
            gap: 30px;
        }

        /* ===== SIDEBAR ===== */
        .sidebar {
            width: 25%;
            background: #fff;
            border-radius: 16px;
            padding: 20px;
            box-shadow: 0 3px 8px rgba(0,0,0,0.05);
        }

        .profile-card img {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            margin-right: 15px;
        }

        .profile-info {
            display: flex;
            align-items: center;
        }

            .profile-info h2 {
                font-size: 20px;
                margin-bottom: 5px;
            }

            .profile-info p {
                color: #777;
                font-size: 16px;
            }

        .view-profile {
            display: block;
            text-align: right;
            color: #0071e3;
            font-size: 15px;
            margin: 5px 0 15px;
        }

        .promo-card {
            background: #ffe8e8;
            padding: 15px;
            border-radius: 12px;
            text-align: center;
            margin-bottom: 25px;
        }

        .btn-red {
            background: #e60012;
            color: white;
            border: none;
            padding: 12px 18px;
            border-radius: 25px;
            cursor: pointer;
            font-size: 15px;
            margin-top: 10px;
        }

        /*.menu a {
            display: block;
            padding: 12px 16px;
            margin-bottom: 8px;
            border-radius: 10px;
            font-size: 16px;
            text-decoration: none;
            color: #333;
            transition: 0.3s;
        }

            .menu a:hover, .menu a.active {
                background: #fff3f3;
                color: #e60012;
            }
*/
        .menu {
            display: flex;
            flex-direction: column;
            background: #fff;
            border-radius: 10px;
            padding: 10px 0;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }

            .menu a {
                display: flex;
                align-items: center;
                padding: 14px 20px;
                font-size: 16px;
                text-decoration: none;
                color: #333;
                transition: 0.3s ease;
                border-left: 4px solid transparent;
            }

                .menu a .icon {
                    font-size: 22px;
                    margin-right: 12px;
                }

                .menu a:hover {
                    background: #f5f5f5;
                }

                .menu a.active {
                    color: #e60012;
                    font-weight: 600;
                    background: linear-gradient(to right, #fff0f0, #ffffff);
                    border-left: 4px solid #e60012;
                }
        .icon {
            margin-right: 10px;
        }

        /* ===== MAIN ===== */
        .main-content {
            flex: 1;
            background: #fff;
            border-radius: 16px;
            padding: 25px 40px;
            box-shadow: 0 3px 8px rgba(0,0,0,0.05);
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

            .header h1 {
                font-size: 28px;
                font-weight: bold;
            }

        .search-bar {
            display: flex;
            background: #f1f1f1;
            border-radius: 30px;
            padding: 8px 15px;
            width: 420px;
        }

            .search-bar input {
                flex: 1;
                border: none;
                background: transparent;
                outline: none;
                font-size: 15px;
            }

            .search-bar button {
                border: none;
                background: transparent;
                font-size: 20px;
                cursor: pointer;
            }

        .tab {
            display: flex;
            gap: 25px;
            border-bottom: 2px solid #eee;
            margin-bottom: 40px;
        }

            .tab button {
                border: none;
                background: none;
                padding-bottom: 12px;
                font-size: 17px;
                cursor: pointer;
                transition: 0.2s;
            }

                .tab button.active {
                    color: #e60012;
                    border-bottom: 3px solid #e60012;
                }

                .tab button:hover {
                    color: #e60012;
                }

        .empty-box {
            text-align: center;
            margin-top: 50px;
        }

            .empty-box img {
                width: 180px;
                opacity: 0.85;
                margin-bottom: 25px;
            }

        .empty-text {
            font-size: 22px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .desc {
            color: #666;
            font-size: 17px;
            margin-bottom: 20px;
        }

    </style>
</head>
<body>
    <div class="container">
        <aside class="sidebar">
            <div class="profile-card">
                <div class="profile-info">
                    <img src="https://cdn-icons-png.flaticon.com/512/147/147144.png" alt="avatar">
                    <div>
                        <h2>USER#</h2>
                        <p>PHONENUMBER</p>
                    </div>
                </div>
                <a href="#" class="view-profile">Xem hồ sơ</a>
                <div class="promo-card">
                    <p>Quý khách chưa là thành viên tại FPT Shop</p>
                    <button class="btn-red">Quan tâm ngay</button>
                </div>
            </div>
            <nav class="menu">
                <a href="#" class="active"><i class="icon bx bx-box"></i> Đơn hàng của tôi</a>
                <a href="@Url.Action("Index","OrderDetail")"><i class="icon bx bx-bell"></i> Chi Tiết Đơn Hàng</a>
                <a href="#"><i class="icon bx bx-receipt"></i> Dịch vụ thu hộ đã thanh toán</a>
                <a href="#"><i class="icon bx bx-heart"></i> Khách hàng thân thiết</a>
                <a href="#"><i class="icon bx bx-map"></i> Sổ địa chỉ nhận hàng</a>
                <a href="#"><i class="icon bx bx-shield"></i> Thông tin bảo hành</a>
                <a href="#"><i class="icon bx bx-log-out"></i> Đăng xuất</a>
            </nav>
        </aside>

        <main class="main-content">
            <div class="header">
                <h1>Lịch Sử Đơn Hàng</h1>
                <div class="search-bar">
                    <input type="text" placeholder="Tìm theo tên đơn, mã đơn hoặc tên sản phẩm">
                    <button>🔍</button>
                </div>
            </div>

            <div class="tab">
                <button class="active">Tất cả</button>
                <button>Đang xử lý</button>
                <button>Đang giao</button>
                <button>Hoàn tất</button>
                <button>Đã hủy</button>
                <button>Trả hàng</button>
            </div>

            <div class="empty-box">
                <img src="https://cdn-icons-png.flaticon.com/512/679/679720.png" alt="empty box">
                <p class="empty-text">Bạn chưa có đơn hàng nào</p>
                <p class="desc">Cùng khám phá hàng ngàn sản phẩm tại FPT Shop nhé!</p>
                <button class="btn-red">Khám phá ngay</button>
            </div>
        </main>
    </div>
</body>
</html>
